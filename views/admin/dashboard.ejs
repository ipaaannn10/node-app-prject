<%- include('../layout/header', { user: user }) %>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">Tambah Paket Baru</div>
            <div class="card-body">
                <form action="/admin/dashboard/add-paket" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label>Nama Paket</label>
                        <input type="text" name="nama_paket" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Harga</label>
                        <input type="number" name="harga" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label>Deskripsi</label>
                        <textarea name="deskripsi" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label>Gambar (JPG/PNG -> Auto WebP)</label>
                        <input type="file" name="gambar" class="form-control" accept="image/*">
                    </div>
                    <button type="submit" class="btn btn-success">Simpan Paket</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">Daftar Paket</div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Gambar</th>
                            <th>Nama</th>
                            <th>Harga</th>
                            <th>Deskripsi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% paket.forEach(item => { %>
                        <tr>
                            <td>
                                <% if(item.gambar) { %>
                                    <img src="/assets/uploads/<%= item.gambar %>" width="80" alt="Img">
                                <% } else { %>
                                    <span class="text-muted">No Img</span>
                                <% } %>
                            </td>
                            <td><%= item.nama_paket %></td>
                            <td>Rp <%= item.harga %></td>
                            <td><%= item.deskripsi %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../layout/footer') %>
